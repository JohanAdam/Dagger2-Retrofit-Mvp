<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:fresco="http://schemas.android.com/apk/res-auto"
  android:layout_width="280dp"
  android:layout_height="wrap_content"
  android:padding="20dp"
  android:background="@drawable/dialog_bg"
  android:clipToPadding="false"
  android:gravity="center"
  tools:layout_editor_absoluteY="25dp">

  <TextView
    android:id="@+id/tv_title"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_centerHorizontal="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:textSize="18sp"
    android:textColor="@color/white"
    tools:text="Title"/>

  <TextView
    android:id="@+id/tv_desc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_below="@+id/tv_title"
    android:layout_centerHorizontal="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/iv_image_ads"
    android:gravity="center"
    android:textSize="15sp"
    android:textColor="@color/white"
    tools:text="description"/>

  <ImageView
    android:id="@+id/iv_image_ads"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:maxHeight="250dp"
    android:scaleType="fitCenter"
    android:layout_marginTop="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_below="@+id/tv_desc"
    android:layout_centerHorizontal="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_title"
    android:clickable="true"
    android:focusable="true"
    android:contentDescription="@string/app_name"
    android:adjustViewBounds="true"/>


  <Button
    android:id="@+id/btn_submit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_below="@+id/iv_image_ads"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_desc"
    android:padding="15dp"
    android:clipToPadding="false"
    android:text="@string/action_submit"
    android:textColor="@color/white"
    style="?android:attr/borderlessButtonStyle"/>

  <Button
    android:id="@+id/btn_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_below="@+id/iv_image_ads"
    app:layout_constraintEnd_toStartOf="@+id/btn_submit"
    app:layout_constraintTop_toTopOf="@+id/btn_submit"
    android:padding="15dp"
    android:clipToPadding="false"
    android:text="@string/action_cancel"
    android:textColor="@color/white"
    android:visibility="visible"
    tools:targetApi="lollipop"
    style="?android:attr/borderlessButtonStyle"/>

  <TextView
    android:id="@+id/tv_powered_by"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/iv_billplz"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_submit"
    android:text="@string/msg_powered_by"
    android:textColor="@color/white"
    android:textAlignment="center"
    android:textSize="12sp"/>

  <ImageView
    android:id="@+id/iv_billplz"
    android:layout_width="55dp"
    android:layout_height="20dp"
    android:layout_marginEnd="8dp"
    android:src="@drawable/ic_billplz"
    app:layout_constraintBottom_toBottomOf="@+id/tv_powered_by"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/tv_powered_by"
    app:layout_constraintTop_toTopOf="@+id/tv_powered_by"/>

</android.support.constraint.ConstraintLayout>

