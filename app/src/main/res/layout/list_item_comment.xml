<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main_card_view"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="8dp"
  android:layout_marginStart="22dp"
  android:layout_marginEnd="22dp"
  app:cardCornerRadius="5dp"
  android:background="?android:attr/selectableItemBackground"
  app:cardBackgroundColor="@color/greyish_brown"
  android:clickable="true"
  android:clipToPadding="false"
  android:focusable="true"
  android:elevation="10dp"
  tools:targetApi="lollipop">

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/tv_duration"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="12dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="0:03"
      style="@style/ListSingleItemTitle"/>

    <android.support.v7.widget.AppCompatImageView
      android:id="@+id/iv_icon_audio"
      android:layout_width="18dp"
      android:layout_height="18dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="12dp"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:src="@drawable/ic_headphone_item"/>

    <android.support.v7.widget.AppCompatImageView
      android:id="@+id/iv_icon_comment"
      android:layout_width="18dp"
      android:layout_height="18dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_centerVertical="true"
      android:layout_toStartOf="@+id/iv_icon_audio"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/iv_icon_audio"
      app:layout_constraintTop_toTopOf="parent"
      android:src="@drawable/ic_comment_item"/>

  </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

